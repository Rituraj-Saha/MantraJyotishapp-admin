<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CreateUser">
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <EditText
       android:id="@+id/etName"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Name"
       android:paddingStart="10dp"
       android:layout_margin="10dp"
       />
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone"
        android:paddingStart="10dp"
        android:layout_margin="10dp"
        android:inputType="phone"
        />

    <EditText
        android:id="@+id/etDob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date Of Birth"
        android:paddingStart="10dp"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/etTob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time Of Birth"
        android:paddingStart="10dp"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/etPob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place Of Birth"
        android:paddingStart="10dp"
        android:layout_margin="10dp"
        />


 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="5dp"
     android:text="Select Payment Status"
     android:layout_marginStart="20dp"
     />
    <Spinner
        android:id="@+id/spinnerPayment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="25dp"
     />

    <EditText
        android:id="@+id/etPamt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Payment Amt"
        android:paddingStart="10dp"
        android:layout_margin="10dp"
        />

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="5dp"
     android:layout_marginStart="20dp"
     android:text="Select star"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        />

 <Button
     android:id="@+id/btnSubmit"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:layout_gravity="center"
     android:text="Submit"/>

</LinearLayout>
    </ScrollView>
</RelativeLayout>